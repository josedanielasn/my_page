<body class ="show-body-author">

	<header class = "show-header-author">
	<span class ="title">My Desk <span>
	</header>


	<div class ="container-show-author">
		<div class="body-top">
			<div class = "author-title">
				Author:
			</div>

			<div class="author-name">			
				<%= @author.author_name %>
			</div>			

			<div class="link-to-add">
			<i class="fas fa-plus fa-xs"></i>
				<%= link_to "Add Quotes",  new_author_quotes_path(@author), class: "link-to-add-inside" %>
			</div>	
		</div>

	<div class="body-bottom">
		<div class = "author-title">
			Quotes:
		</div>

		<table class ="quote-list">
		<% @quotes.each do |quote| %>

			<tr class ="quotes">
				<td>
					<i class="fas fa-angle-right fa-1x arrow-icon"></i>
					<%= quote.quote %>
				</td>	 
				<td>
					<%= link_to edit_author_quotes_path(quote), class: 'option-quote option-quote-edit' do %>
					<i class="far fa-edit"></i> 
					<%end%>
				</td>
				<td>
					<%= link_to delete_author_quotes_path(quote) ,method: :delete, class: 'option-quote option-quote-delete' do%>
					<i class="far fa-trash-alt"></i>
					<%end%>
				</td>
			</tr>
		<%end%>
		</table>
	</div>

</body>

